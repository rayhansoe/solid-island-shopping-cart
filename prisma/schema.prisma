generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Product {
    id   String @id @default(cuid())
    name String
    stock Int
    price Float
    imgUrl String
    cartItem CartItem[]
    transactionItem TransactionItem[]
    createdAt DateTime
    updatedAt DateTime
}

model CartItem {
    id   String @id @default(cuid())
    quantity Int
    product  Product @relation(fields: [productId], references: [id])
    productId String 
    isChecked Boolean
    status Boolean
    updatedAt DateTime
    createdAt DateTime
}

model Transaction {
    id   String @id @default(cuid())
    transactionItem TransactionItem[]
    updatedAt DateTime
    createdAt DateTime
}

model TransactionItem {
    id   String @id @default(cuid())
    transaction Transaction @relation(fields: [transactionId], references: [id])
    transactionId String 
    quantity Int
    product  Product @relation(fields: [productId], references: [id])
    productId String 
    updatedAt DateTime
    createdAt DateTime
}